<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.DetailFragment">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" />

    <ImageView
        android:id="@+id/image_anim"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.example.galaxymoment.utils.SlowFlingRecyclerView
        android:id="@+id/film_strip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingTop="20dp"
        android:paddingBottom="20dp" />

    <Button
        android:id="@+id/button_open_moreinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More info" />

    <ImageView
        android:id="@+id/favorite_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/fab"
        android:elevation="10dp"
        android:scaleType="centerInside"
        android:layout_gravity="bottom|right"
        android:stateListAnimator="@animator/sla_fab"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/asld_favorite" />

</FrameLayout>